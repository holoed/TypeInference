name:                TypeInference
version:             0.1.0.0
synopsis:            Minimalistic Type Inference
-- description:
license:             Apache-2.0
license-file:        LICENSE
author:              edmondo@gmail.com
maintainer:          edmondo@gmail.com
-- copyright:
-- category:
build-type:          Simple
extra-source-files:  ChangeLog.md, README.md
cabal-version:       >=1.10

executable TypeInference
  main-is:             Main.hs
  other-modules:       Ast,
                       Fixpoint,
                       InferMonad,
                       Environment,
                       Unification,
                       Infer,
                       Monads,
                       RecursionSchemes,
                       FreeVariables,
                       Substitutions,
                       Types,
                       BuiltIns,
                       PrettyTypes,
                       Lexer,
                       Parser
  other-extensions:    DeriveFunctor, UndecidableInstances
  build-depends:       base,
                       array,
                       containers,
                       mtl,
                       transformers,
                       haskeline
  hs-source-dirs:      src
  build-tools:         happy, alex
  default-language:    Haskell2010

test-suite tests
  ghc-options: -Wall -fno-warn-orphans
  type: exitcode-stdio-1.0
  main-is: Tests.hs
  other-modules:       Ast,
                       Fixpoint,
                       InferMonad,
                       Environment,
                       Unification,
                       Infer,
                       Monads,
                       RecursionSchemes,
                       FreeVariables,
                       Substitutions,
                       Types,
                       BuiltIns,
                       PrettyTypes,
                       Lexer,
                       Parser
  hs-source-dirs: tests, src
  build-tools:         happy, alex
  build-depends:       base,
                       array,
                       containers,
                       mtl,
                       transformers,
                       hspec
  default-language:    Haskell2010
